@model Films.Kernel.Context.Actor

<div>
    <h4>Actor</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>FirstName</dt>
        <dd>@Model.FirstName</dd>

        <dt>LastName</dt>
        <dd>@Model.LastName</dd>

        <dt>MiddleName</dt>
        <dd>@Model.MiddleName</dd>

        <dt>Birth</dt>
        <dd>@Model.Birth</dd>

        <dt>Films</dt>
        <dd>
            @foreach (var film in Model.Films)
            {
                @film<br>
            }
        </dd>
    </dl>
</div>
<div>
    <div class="col-lg-3">
        <button class="btn-warning form-control" onclick="hrefActor('Edit', @Model.Id)">Edit</button>
    </div>

    <div class="col-lg-3">
        <button class="btn-success form-control" onclick="hrefActor('Index')">Back</button>
    </div>
</div>